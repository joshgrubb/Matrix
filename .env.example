# =============================================================================
# Copy this file to .env and fill in your values. Never commit .env to Git.
# =============================================================================

# -- Flask ----------------------------------------------------------------
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=change-me-to-a-random-string

# -- Database (SQL Server via ODBC) ----------------------------------------
# Format: mssql+pyodbc://<user>:<password>@<host>/<database>?driver=<driver>&TrustServerCertificate=yes
# For Windows Auth (trusted connection), use Trusted_Connection=yes instead of user/pass.
# SQL Express default instance: localhost\SQLEXPRESS
DATABASE_URL=mssql+pyodbc://@localhost\SQLEXPRESS/PositionMatrix?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes&Trusted_Connection=yes
TEST_DATABASE_URL=mssql+pyodbc://@localhost\SQLEXPRESS/PositionMatrix?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes&Trusted_Connection=yes

# -- Entra ID (Azure AD) OAuth2 -------------------------------------------
AZURE_CLIENT_ID=your-app-registration-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id
AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
AZURE_REDIRECT_URI=http://localhost:5000/auth/callback

# -- NeoGov API ------------------------------------------------------------
NEOGOV_API_BASE_URL=https://api.neogov.com/v1
NEOGOV_API_KEY=your-neogov-api-key

# -- Waitress (production WSGI) --------------------------------------------
WAITRESS_HOST=127.0.0.1
WAITRESS_PORT=8080

# -- Logging ---------------------------------------------------------------
LOG_LEVEL=DEBUG
